    <br><br><br><br>
    <center>
     <font face="arial">
<h1>DATA PENJUALAN</h1>
<br>
    <form action="/penjualan" method="POST">
    <input type="text" name="inputNAMA_BARANG" placeholder="NAMA BARANG">
    <input type="text" name="inputJUMLAH" placeholder="JUMLAH">
    <input type="text" name="inputHARGA" placeholder="HARGA">
    <button class="btn btn-primary" type="submit"> TAMBAH</button>
    </form>
    </font>
    </center>
    <br/>
    <table class="table table-hover" style="text-align: center;">
        <thead>
            <tr class="bg-danger">
                <th>NAMA BARANG</th>
                <th>JUMLAH</th>
                <th>HARGA</th>
                <th>AKSI</th>
            </tr>
        </thead>
        <tbody class="table table-active" style="text-align: center;">
            {{#each data}}
            <tr>
                <td>{{ NAMA_BARANG }}</td>
                <td>{{ JUMLAH }}</td>
                <td>{{ HARGA }}</td>
                <td><a href="/hapus-nama_barang/{{ NAMA_BARANG }}"><button>DELETE</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
